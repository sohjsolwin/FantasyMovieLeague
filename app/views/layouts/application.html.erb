<!DOCTYPE html>
<html>
<head>
  <title>2014 Summer Movie Contest</title>
  <meta name="viewport" content="width=480" />
  <%= stylesheet_link_tag    "http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.9/themes/south-street/jquery-ui.css", media: "all", "data-turbolinks-track" => true %>
  <%= stylesheet_link_tag    "ui.jqgrid", media: "screen", "data-turbolinks-track" => true %>
  <%= stylesheet_link_tag    "application", media: "screen", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jqueryui/1.9.0/jquery-ui.min.js", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "i18n/grid.locale-en.js", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "jquery.jqGrid.min", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
<script type="text/javascript">

function stopRKey(evt) {
  var evt = (evt) ? evt : ((event) ? event : null);
  var node = (evt.target) ? evt.target : ((evt.srcElement) ? evt.srcElement : null);
  if ((evt.keyCode == 13) && (node.type=="text"))  {return false;}
}

document.onkeypress = stopRKey;

</script>
</head>
<body>
<div id="wrapper">
<div id="nav">
	<div class="moneyRemaining">
		<div id="progressbar"><div class="progress-label"></div></div>
	</div>
	<ul>
		<% if params[:controller] == "main" %>
		<li <%= is_active('/') %>><a href="/">All</a></li>
		<li <%= is_active('/friends') %>><a href="/friends">Friends</a></li>
		<li <%= is_active('/work') %>><a href="/work">Work</a></li>
		<li <%= is_active('/shares') %>><a href="/shares">Shares</a></li>
		<% end %>
		<li class="page_title">2014 Summer Movie Contest</li>
	</ul>
</div>

<%= yield %>

<script type="text/javascript">
	function popupDetails(url)
	{
		$("#iframeDialog").attr("src", "about:blank");
		$("#iframeDialog").attr("src", url);
		$("#dialog-modal").dialog("open");
		return false;
	}

	$(function () {
		$("#dialog-modal").dialog({
			height: 500,
			width: 900,
			modal: true,
			autoOpen: false,
			resizable: false,
			close: function () { $("#iframeDialog").attr("src", "about:blank"); }
		});
	});
</script>
<div id="dialog-modal" title="More Information">
	<iframe id="iframeDialog" src="about:blank" frameborder="0" width="860" height="420"></iframe>
</div>
<script type="text/javascript">

  var _gaq = _gaq || [];
  _gaq.push(['_setAccount', 'UA-347103-3']);
  _gaq.push(['_trackPageview']);

  (function() {
    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
  })();

</script>
<p style="clear:both;text-align:center;margin-top:32px;">
  <a href="https://github.com/snickroger/movie_draft_ruby" target="_blank">
	<%= image_tag "github.png" %>
  </a>
  <%= image_tag "ruby.png" %>
</p>
</div>
</body>
</html>
