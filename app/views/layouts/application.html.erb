<!DOCTYPE html>
<html>
<head>
  <title>2015 Summer Movie Contest</title>
  <meta name="viewport" content="width=480" />
  <%= stylesheet_link_tag    "http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.9/themes/south-street/jquery-ui.css", media: "all"  %>
  <%= stylesheet_link_tag    "ui.jqgrid", media: "screen"  %>
  <%= stylesheet_link_tag    params[:controller], media: "screen"  %>
  <%= stylesheet_link_tag  "application", media: "screen"  unless params[:controller] == "application" %>
  <%= javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"  %>
  <%= javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jqueryui/1.9.0/jquery-ui.min.js"  %>
  <%= javascript_include_tag "i18n/grid.locale-en.js"  %>
  <%= javascript_include_tag "jquery.jqGrid.min"  %>
  <%= csrf_meta_tags %>
<script type="text/javascript">

function stopRKey(evt) {
  var evt = (evt) ? evt : ((event) ? event : null);
  var node = (evt.target) ? evt.target : ((evt.srcElement) ? evt.srcElement : null);
  if ((evt.keyCode == 13) && (node.type=="text"))  {return false;}
}

document.onkeypress = stopRKey;

</script>
</head>
<body>
<div id="wrapper">
<div id="nav">
	<div class="moneyRemaining">
		<div id="progressbar"><div class="progress-label"></div></div>
	</div>
	<ul class="mainmenu">
		<% if params[:controller] == "main" %>
		<li <%= is_active('/friends') %>><a href="/friends">Friends</a></li>
		<li <%= is_active('/work') %>><a href="/work">Work</a></li>
		<li <%= is_active('/shares') %>><a href="#">Shares</a>
			<div class="submenu">
				<ul>
					<li><a href="/shares/friends">Friends</a></li>
					<li><a href="/shares/work">Work</a></li>
				</ul>
			</div>
		</li>
		<% end %>
		<li class="page_title">2015 Summer Movie Contest</li>
	</ul>
</div>

<%= yield %>

<script type="text/javascript">
	function popupDetails(url)
	{
		$("#iframeDialog").attr("src", "about:blank");
		$("#iframeDialog").attr("src", url);
		$("#dialog-modal").dialog("open");
		return false;
	}

	$(function () {
		$("#dialog-modal").dialog({
			height: 500,
			width: 900,
			modal: true,
			autoOpen: false,
			resizable: false,
			close: function () { $("#iframeDialog").attr("src", "about:blank"); }
		});
	});
</script>
<div id="dialog-modal" title="More Information">
	<iframe id="iframeDialog" src="about:blank" frameborder="0" width="860" height="420"></iframe>
</div>
<script type="text/javascript">

