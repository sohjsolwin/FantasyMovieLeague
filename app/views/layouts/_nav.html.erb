<%
	show_season = nav[:selected_season].id != nav[:seasons].first.id
%>
<div id="nav">
	<div class="moneyRemaining">
		<div id="progressbar"><div class="progress-label"></div></div>
	</div>
	<ul class="mainmenu">
		<% if params[:controller] == "main" %>
		<li <%= active?('/friends') %>><a href="/friends<%= show_season ? "/?season=%s" % nav[:selected_season].slug : "" %>">Friends</a></li>
		<li <%= active?('/work') %>><a href="/work<%= show_season ? "/?season=%s" % nav[:selected_season].slug : "" %>">Work</a></li>
		<li <%= active?('/shares') %>><a href="#">Shares</a>
			<div class="submenu">
				<ul>
					<li><a href="/shares/friends<%= show_season ? "/?season=%s" % nav[:selected_season].slug : "" %>">Friends</a></li>
					<li><a href="/shares/work<%= show_season ? "/?season=%s" % nav[:selected_season].slug : "" %>">Work</a></li>
				</ul>
			</div>
		</li>
		<% end %>
		<li class="page_title">
			<%= nav[:selected_season].page_title %> &#9660;
			<div class="submenu" style="width:266px">
				<ul>
					<% nav[:seasons].each do |n| %>
						<li><a href="/?season=<%= n.slug %>"><%= n.name %></a></li>
					<% end %>
				</ul>
			</div>
		</li>
	</ul>
</div>
